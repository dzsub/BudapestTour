<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_margin_top"
        android:paddingLeft="@dimen/list_text_padding_left"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_name_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_bottom"
        android:paddingLeft="@dimen/list_text_padding_left"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_address_size"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_height"
        android:scaleType="centerCrop" />


</LinearLayout>